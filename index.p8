--explosion
function make_explosion(x,y)
 local exp={}
 exp.x=x
 exp.y=y
 exp.r=6
 exp.ttl=1.3
 exp.time=exp.ttl
 add(explosions,exp)
 sfx(0)
end

function update_explosion(e)
 e.time-=0.033 --1/30
 if(e.time<0) then
  del(explosions,e)
  return
 end
end

function draw_explosion(e)
 explosion(e.x,e.y,
  explosion_radius(e)
 )
end

function explosion_radius(e, squared)
 local r=e.r-mapvalue(
  e.time,0,e.ttl,0,e.r
 )
 if (squared) return r*r
 return r
end

function check_if_explode(x,y)
 for e in all(explosions) do
 	local dx=e.x-x
 	local dy=e.y-y
 	local r2=explosion_radius(e,true)
 	if(dx*dx+dy*dy<r2) return true
 end
 return false
end

